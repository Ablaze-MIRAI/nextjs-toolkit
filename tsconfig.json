{
  "compilerOptions": {
    "paths": {
      "@/toolkit/components/*": [
        "./components/ui/*",
        "./components/layout/*",
        "./components/custom/*",
        "./components/markdown/*",
        "./components/*"
      ],
      "@/toolkit/i18n/*": [
        "./i18n/*"
      ],
      "@/toolkit/lib/*": [
        "./lib/*"
      ]
    },
    "outDir": "dist",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [
      "node",
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}